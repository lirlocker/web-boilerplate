{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "description": "A simple es6-based web boilerplate using gulp, babel and webpack.",
  "author": "Lir Locker",
  "license": "ISC",
  "repository": "https://github.com/lirlocker/web-boilerplate.git",
  "userConfig": {
    "sourceDir": "source/",
    "destDir": "public/",
    "devDir": "develpoment/",
    "gulpWebserverConfig": {
      "livereload": true,
      "open": "http://localhost:8000/",
      "host": "0.0.0.0",
      "directoryListing": false
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-util": "^3.0.8",
    "gulp-webserver": "^0.9.1",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "uglify-js": "^2.8.0",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.6.1"
  }
}
