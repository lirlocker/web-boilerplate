{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "description": "A simple es6-based web boilerplate using gulp, babel and webpack.",
  "author": "Lir Locker",
  "license": "ISC",
  "repository": "https://github.com/lirlocker/web-boilerplate.git",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "userConfig": {
    "sourceDir": "source/",
    "destDir": "public/",
    "gulpWebserverConfig": {
      "livereload": true,
      "directoryListing": false,
      "open": "http://localhost:8000/",
      "host": "0.0.0.0"
    },
    "entryPoint": "source/js/main.js",
    "bundleDest": "public/js",
    "bundleFilename": "bundle.js"
  },
  "eslintConfig": {
      "parserOptions": {
          "ecmaVersion": 6,
          "sourceType": "module",
          "ecmaFeatures": {
              "jsx": true
          }
      }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-jshint": "^2.0.4",
    "gulp-util": "^3.0.8",
    "gulp-webpack": "^1.5.0",
    "gulp-webserver": "^0.9.1",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "uglify-js": "^2.8.0",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.4.1"
  }
}
